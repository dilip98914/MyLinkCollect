<%- include('../partials/header') %>
<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-2">
      <form action="/collection" method="POST" enctype="multipart/form-data">

        <div class="input-group mb-3">
          <span class="input-group-text" id="basic-addon1">Collection Name</span>
          <input type="text" class="form-control" placeholder="Title" aria-label="Username" aria-describedby="basic-addon1" name="title">
        </div>
        <div class="input-group">
          <span class="input-group-text">Description Maybe?</span>
          <textarea class="form-control" aria-label="With textarea" name="description"></textarea>
        </div>

