          <input class="form-check-input" type="checkbox" role="switch" name="isPrivate" id="flexSwitchCheckDefault">
          <label class="form-check-label" for="flexSwitchCheckDefault">switch to private collection</label>
        </div>

        <div class="input-group mt-3">
          <span class="input-group-text" id="basic-addon1">Maybe upload image...</span>
          <input type="file" class="form-control" placeholder="Title" name="profile-file" aria-label="Username" aria-describedby="basic-addon1">
        </div>

        <button type="submit" class="btn btn-primary btn-lg mt-5">
          <i class="bi bi-plus-circle"></i> &nbsp;Add
        </button>
