<%- include('../partials/header') %>
<div class="container">
  <section class="p-5">
    <div class="d-flex justify-content-between border-top border-1 text-start mt-5 mb-3 p-3">
      <div class="text-success">
        <hr>
      </div>
      <h2 class="text-start">My Collection</h2>
      <a class="btn btn-primary" href="/collection/add">Add Collection</a>
    </div>
    <div class="d-flex mb-3 justify-content-between">
      <form class="d-flex me-5 flex-1 w-50" role="search">
        <div class="input-group">
          <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
          <span class="bi bi-search input-group-text"></span>
        </div>
      </form>
      <div class="dropdown">
        <a class="btn btn-outline-warning" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
          Sort By
        </a>
        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
          <li><a class="dropdown-item" href="#">Recently Updated</a></li>
          <li><a class="dropdown-item" href="#">Most Upvoted</a></li>
          <li><a class="dropdown-item" href="#">Most Links</a></li>
        </ul>
      </div>
    </div>
    <% if(collections.length>0) {%>
    <% for(let i=0;i<collections.length;i++){ %>
    <a href="/collection/<%=collections[i].id%>">
      <div class="card  m-3 border border-1" style="width: 15rem;">
        <img src="/image/sampleImage.jpg" style="width: 18rem;height: 8rem;" class="card-img-top img-fluid">
        <div class="card-body">
          <div class="d-flex justify-content-between">
            <h5 class="card-title"><%= collections[i].title%></h5>
            <span class=" text-secondary"><%= collections[i].links.length%> Links</span>
          </div>
          <span class="badge text-bg-secondary mb-3"><%= collections[i].isPrivate%></span>
          <span class="badge text-bg-primary mb-3">by dilip kumar</span>
          <br>
          <i class="bi bi-balloon-heart-fill"></i>&nbsp; 1
          <i class="bi bi-eye"></i> 10
        </div>
      </div>
    </a>
    <%}%>

      <%}else{%>
    <h2 class="mt-5">No Collection Exists!</h2>
    <%}%>

  </section>
</div>
<%- include('../partials/bottom') %>