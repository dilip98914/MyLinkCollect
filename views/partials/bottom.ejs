  function searchform(val) {
    var baseurl = "index.html";
    var searchType = "";
    if (val == 1) {
      var stype = $("input[name='jobs']:checked").val();// parseInt($("#stype").val());
      var skills = $("#skills").val() ? $("#skills").val() : '';
      var locations = $("#locations").val() ? $("#locations").val() : '';
      // console.log(stype);
      //console.log("skills",skills);
      //return false;
      if (!skills) {

        $(".error-text").text("Please enter skills or location to search relevant jobs");
        $(".error-text").css({ "display": "block" });
        return false;
      }
      if (stype == "1") {
        var url = baseurl + "contract-jobs";
        searchType = "Contract Jobs";
      }
      if (stype == "2") {
        var url = baseurl + "freelance-jobs";
        searchType = "Freelance Jobs"
      }
      url += "?page=1";
      url += "&limit=15";
      if (skills) {
        skills = skills.toLowerCase();
        skills = skills.replace(/,/g, '-');
        skills = skills.replace(/-\s*$/, "");
        url += "&skills=" + encodeURIComponent(skills);
      }
      if (locations) {
        url += "&locations=" + locations.toLowerCase();;
      }
      //window.location = url;
    }
    if (val == 2) {
      var stype = $("input[name='talent']:checked").val();// parseInt($("#stype").val());
      var skills = $("#skills").val() ? $("#skills").val() : '';
      var locations = $("#locations").val() ? $("#locations").val() : '';
      // console.log(stype);
      //console.log("skills",skills);
      //return false;
      if (!skills) {

        $(".error-text").text("Please enter skills or location to search relevant Talent");
        $(".error-text").css({ "display": "block" });
        return false;
      }
      if (stype == "1") {
        var url = baseurl + "hire-bench-resources";
        searchType = "Hire Bench Resources";
      }
      if (stype == "2") {
        var url = baseurl + "hire-freelancers";
        searchType = "Hire Freelancers";
      }
      url += "?page=1";
      url += "&limit=15";
      if (skills) {
        skills = skills.toLowerCase();
        skills = skills.replace(/,/g, '-');
        skills = skills.replace(/-\s*$/, "");
        url += "&skills=" + encodeURIComponent(skills);
      }
      if (locations) {
        url += "&locations=" + locations.toLowerCase();;
      }

    }
    const postdata = {
      "type": val,
      "searchType": searchType,
      "skills": skills,
      "location": locations
    };
    $.ajax({
      "type": "POST",
      "url": baseurl + "auth/homesearch",
      "data": postdata,
      success: function (res) {
        if (res.confirmation == 'success') {

          window.location = url;
        } else {
          window.location = url;
        }
      },
      error: function (response) {
        window.location = url;
      }
    });
  }

