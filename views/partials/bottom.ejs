<script>
  function get_city(val) {
    var filter = { "city_name": { $regex: '^' + val, "$options": "i" } };
    var baseurl = "index.html";
    var url = baseurl + "notoken/city?filter=";
    $(".city_loader").css({ "display": "block" });
    $.ajax({
      type: "GET",
      url: url + JSON.stringify(filter),
      success: function (res) {
        var cdata = res.data;
        $(".city_loader").css({ "display": "none" });

        if (cdata.length > 0) {
          html = '<span class="closecity" onclick="closecity()">X</span>';
          for (var i = 0; i < cdata.length; i++) {
            html += '<a id="' + cdata[i]._id + '" onclick=setvalue("' + cdata[i]._id + '",' + i + ') rel="' + cdata[i].city_name + '"> ';
            html += cdata[i].city_name + '(' + cdata[i].country_id.country_name + ')';
            html += '</a>';
          }
          $(".locationlist").css({ "display": "block" }).html(html);
        } else {
          $(".locationlist").css({ "display": "none" });
        }
      },
      error: function (response) {
        $(".city_loader").css({ "display": "none" });
      }
    });
  }
  function setvalue(_id, i) {
    var city_name = $("#" + _id).attr('rel');
    $("#locations").val(city_name);
    $(".locationlist").css({ "display": "none" })
  }
  function closecity() {
    $(".locationlist").css({ "display": "none" });
  }

